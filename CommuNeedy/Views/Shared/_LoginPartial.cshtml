@using Microsoft.AspNetCore.Identity

@inject SignInManager<User> SignInManager



    <ul class="navbar-nav">
        @if (SignInManager.IsSignedIn(User))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Needs" asp-action="Index">Needs</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Donations" asp-action="Index">Donations</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Home" asp-action="Home">About</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Home" asp-action="Index" title="Welcome">Welcome @User.Identity.Name</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Account" asp-action="Logout" title="Welcome">Logout</a>
            </li>


        }
        else
        {
            <li class="nav-item">
                <a id="register" class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
            </li>
            <li class="nav-item">
                <a id="login" class="nav-link text-pink" asp-controller="Account" asp-action="Login">Login</a>
            </li>
        }
    </ul>
