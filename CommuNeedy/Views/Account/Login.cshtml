@model CommuNeedy.Models.UserLoginModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center align-items-center" style="margin-top:100px; margin-bottom: 100px;">
        <div class="col-lg-6 col-md-8">
            <div class="card" style="padding: 60px;">
                <div class="logo-con" style="text-align: center;">
                    <img class="logo" alt="logo" src="~/img/logo.png" style="width: 100px; height:100px"/>
                    <h2 class="logo-title" style="font-weight: 700;margin-top: 10px;">CommuNeedy</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group forms">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" style="border: 1px solid #E4ECFF;"/>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password" class="form-control" style="border: 1px solid #E4ECFF;"/>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group form-check" >
                            <label class="form-check-label">
                                <input class="form-check-label" asp-for="RememberMe" style="border: 1px solid #E4ECFF;"/> @Html.DisplayNameFor(model => model.RememberMe)
                            </label>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Login" class="btn btn-primary"  style="padding-left: 50px !important; background-color: #4680FE !important; padding-right: 50px !important; border-radius: 8px !important; font-weight: 600 !important; margin-right: 0px" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}